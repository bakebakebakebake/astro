---
const { src, alt } = Astro.props;
---

<div class="custom-hero-image">
  <img src={src} alt={alt} />
  <div class="glow-effect"></div>
</div>

<style>
  .custom-hero-image {
    position: relative;
    width: 300px;
    height: 300px;
    margin: 0 auto;
  }
  
  .custom-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.2);
    z-index: 1;
    position: relative;
  }
  
  .glow-effect {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: radial-gradient(circle at center, rgba(var(--sl-color-accent-high), 0.3) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(15px);
    z-index: 0;
  }
</style>