---
import type { Props } from '@astrojs/starlight/props';
import DefaultHeader from '@astrojs/starlight/components/Header.astro';
---

<DefaultHeader {...Astro.props}>
  <div slot="actions">
    <div class="github-link-placeholder"></div>
  </div>
</DefaultHeader>

<style>
  /* 隐藏原始的 GitHub 图标 */
  :global(.social-links a[href*="github"]) {
    display: none !important;
  }
  
  /* 为 GitHub 图标创建占位符 */
  .github-link-placeholder::after {
    content: '';
    display: inline-block;
    width: 1.5rem;
    height: 1.5rem;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z"/></svg>');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
  }
  
  /* 添加 GitHub 链接 */
  .github-link-placeholder {
    display: flex;
    align-items: center;
  }
  
  .github-link-placeholder a {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    color: var(--sl-color-text);
    text-decoration: none;
    border-radius: 0.25rem;
    transition: background-color 0.2s;
  }
  
  .github-link-placeholder a:hover {
    background-color: var(--sl-color-gray-5, rgba(128, 128, 128, 0.1));
  }
</style>

<script>
  // 获取 GitHub 链接并移动到自定义位置
  document.addEventListener('DOMContentLoaded', () => {
    const githubLink = document.querySelector('.social-links a[href*="github"]');
    const placeholder = document.querySelector('.github-link-placeholder');
    
    if (githubLink && placeholder) {
      placeholder.appendChild(githubLink.cloneNode(true));
    }
  });
</script>