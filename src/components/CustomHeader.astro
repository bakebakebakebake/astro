---
import type { Props } from '@astrojs/starlight/props';
import DefaultHeader from '@astrojs/starlight/components/Header.astro';
---

<div class="header-wrapper">
  <DefaultHeader {...Astro.props} />
  <div class="digital-garden-container">
    <a href="https://fxj.wiki" class="digital-garden-link" target="_blank" rel="noopener noreferrer">
      <img src="/digital-garden-icon.png" alt="Digital Garden" />
    </a>
  </div>
</div>

<style>
  .header-wrapper {
    position: relative;
  }
  
  .digital-garden-container {
    position: absolute;
    right: 5.5rem; /* 调整位置，确保在 GitHub 图标左侧 */
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }
  
  .digital-garden-link {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s;
  }
  
  .digital-garden-link:hover {
    background-color: var(--sl-color-gray-5, rgba(128, 128, 128, 0.1));
  }
  
  .digital-garden-link img {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  /* 在移动设备上调整位置 */
  @media (max-width: 768px) {
    .digital-garden-container {
      right: 4.5rem;
    }
  }
</style>